<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/backGround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="25.24dp"
            android:background="#e8e8e8"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/threeElements"
            android:layout_width="46dp"
            android:layout_height="10.52dp"
            android:layout_marginTop="7.36dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/icoons"
            app:layout_constraintRight_toRightOf="@id/first"
            app:layout_constraintTop_toTopOf="@id/first"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="17.36dp"
            android:src="@drawable/ic_arrow_back_24px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/zayavka"
            android:layout_width="224dp"
            android:layout_height="48dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/rubik"
            android:text="Заявка на дебетную карту"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/karta"
            android:layout_width="256dp"
            android:layout_height="189dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/card3d"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/zayavka"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="301dp"
            android:layout_height="48dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/rubik"
            android:text="Бонусы*, которые можно
потратить на любые покупки "
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/karta"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="239dp"
            android:layout_height="34dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="409dp"
            android:fontFamily="@font/rubik"
            android:text="1% Гарантированный бонус за каждую безналичную транзакцию"
            android:textColor="#787878"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="239dp"
            android:layout_height="34dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="479dp"
            android:fontFamily="@font/rubik"
            android:text="+2% дополнительный бонус за депозит от 500 000 тенге"
            android:textColor="#787878"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="239dp"
            android:layout_height="34dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="549dp"
            android:fontFamily="@font/rubik"
            android:text="+2% дополнительный бонус за остаток на карте  от 100 000 тенге"
            android:textColor="#787878"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="403dp"
            android:background="@drawable/little_square"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="473dp"
            android:background="@drawable/little_square"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="543dp"
            android:background="@drawable/little_square"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/present"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="414dp"
            android:src="@drawable/vector1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/koleso"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="485dp"
            android:src="@drawable/vector2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/card"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="554dp"
            android:src="@drawable/vector3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/perviekvadrat"
            android:layout_width="312dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="625dp"
            android:background="@drawable/big_square"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vtoroikvadrat"
            android:layout_width="312dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="705dp"
            android:background="@drawable/big_square"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tretiekvadrat"
            android:layout_width="312dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="785dp"
            android:background="@drawable/big_square"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="264dp"
            android:layout_height="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="4dp"
            android:autofillHints=""
            android:fontFamily="@font/rubik"
            android:hint="Имя"
            android:textColor="#787878"
            android:textColorHint="#787878"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/perviekvadrat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/perviekvadrat"
            tools:ignore="HardcodedText,TextFields" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="264dp"
            android:layout_height="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/rubik"
            android:hint="ИИН"
            android:textColor="#787878"
            android:textColorHint="#787878"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/vtoroikvadrat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/vtoroikvadrat"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="264dp"
            android:layout_height="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/rubik"
            android:hint="Номер телефона"
            android:textColor="#787878"
            android:textColorHint="#787878"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tretiekvadrat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tretiekvadrat"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <CheckBox
            android:id="@+id/editBox"
            android:layout_width="2566dp"
            android:layout_height="17dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="877dp"
            android:checked="false"
            android:fontFamily="@font/rubik"
            android:text="Согласие на обработку личных данных"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/myTextView"
            android:layout_width="298dp"
            android:layout_height="68dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="929dp"
            android:autoLink="web"
            android:fontFamily="@font/rubik"
            android:linksClickable="true"
            android:text="@string/partial_text"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="317dp"
            android:layout_height="57dp"
            android:layout_marginTop="1021dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="ДОСТАВКА ПЛАТЕЖНОЙ КАРТОЧКИ ВОЗМОЖНА ТОЛЬКО В ГОРОДАХ:
НУР-СУЛТАН И АЛМАТЫ"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="312dp"
            android:layout_height="56dp"
            android:layout_marginTop="1102dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#c6c6c6"
            android:enabled="false"
            android:text="Заказать карту"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

